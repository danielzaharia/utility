{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": [
        "standard",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
        },
        "ecmaVersion": 2017
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "function-paren-newline": ["error", "consistent"],
        "operator-linebreak" : "off",
        "multiline-ternary": "off",
        "prefer-const": "off",
        "nestedBinaryExpressions": "off",
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "one-var": "off",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ]
    }
}
